<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ObservationView">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"
        android:textColor="?attr/colorOnSecondary"
        style="@style/Widget.Material3.Button.ElevatedButton.Icon"
        android:text="Observation"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="match_parent"
        android:minHeight="20dp"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:adjustViewBounds="true"
        android:maxHeight="300dp"
        android:id="@+id/Spicture"
        android:contentDescription="picture"/>



    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">
        <LinearLayout
            android:id="@+id/userInfoCons"
            android:layout_width="match_parent"
            android:scrollbars="vertical"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:orientation="vertical"
            android:layout_marginEnd="20dp"
            android:fadeScrollbars="true"
            android:isScrollContainer="true"
            android:layout_marginBottom="20dp"
            android:paddingBottom="20dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginTop="20dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/SDatelay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Date"
                android:layout_marginTop="20dp"
                app:startIconDrawable="@drawable/date_24">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Sdate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20dp"
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:textStyle="bold"
                    tools:ignore="SpeakableTextPresentCheck" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/TScatLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:layout_marginTop="20dp"
                app:startIconDrawable="@drawable/address_24">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/SAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:textStyle="bold"
                    tools:ignore="SpeakableTextPresentCheck" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/TSHoursLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Latitude"
                android:layout_marginTop="20dp"
                app:startIconDrawable="@drawable/my_location_24">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Slat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20dp"
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:textStyle="bold"
                    tools:ignore="SpeakableTextPresentCheck" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Longitude"
                android:layout_marginTop="20dp"
                app:startIconDrawable="@drawable/my_location_24">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Slng"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20dp"
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:textStyle="bold"
                    tools:ignore="SpeakableTextPresentCheck" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/TSdescriptionLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Descriptions"
                android:layout_marginTop="20dp"
                app:startIconDrawable="@drawable/vector_assignment">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Sdescription"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20dp"
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:textStyle="bold"
                    tools:ignore="SpeakableTextPresentCheck" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>